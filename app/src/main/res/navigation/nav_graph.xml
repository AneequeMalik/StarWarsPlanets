<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainActivity">

    <!-- Your Compose-hosting Activity -->
    <activity
        android:id="@+id/mainActivity"
        android:name="com.aneeq.starwarsplanets.ui.main.MainActivity"
        android:label="Planets" >
        <action
            android:id="@+id/action_mainActivity_to_planetDetailFragment"
            app:destination="@id/planetDetailFragment" />
    </activity>

    <!-- Your XML-based Detail Fragment -->
    <fragment
        android:id="@+id/planetDetailFragment"
        android:name="com.aneeq.starwarsplanets.ui.detail.PlanetDetailFragment"
        android:label="Planet Details"
        tools:layout="@layout/fragment_planet_detail" />

</navigation>
